{% extends 'base.html.twig' %}

{% block title %}Hello ScoreController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <main class="score">
        <section>
        <table>
            <thead>
            <h2>vos meilleurs scores</h2>
            <tr>
                <th>score</th>
                <th>date</th>
            </tr>
            </thead>
            <tbody>
                {% for score in scores %}
                <tr>
                    <td>{{ score.score }}</td>
                    <td>{{ score.timestamp | date("d M Y") }}</td>
                </tr>
                {% endfor %}
            </tbody>
        
        </table>
        
        </section>
        <section>
            <table>
                <thead>
                <h2>Highscore</h2>
                <tr>
                    <th>joueur</th>
                    <th>score</th>
                    <th>date</th>
                </tr>
                </thead>
                <tbody>
                    {% for score in highScore %}
                    <tr>
                        <td>{{ score.user.username }}</td>
                        <td>{{ score.score }}</td>
                        <td>{{ score.timestamp | date("d M Y") }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            
            </table>
        </section>
    </main>
</div>
{% endblock %}
